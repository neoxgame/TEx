{
  "name": "facebook-desktop",
  "version": "1.0.0",
  "description": "Facebook App For Windows Desktop",
  "main": "index.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder"
  },
  "author": "mohd-arif-un",
  "license": "MIT",
  "dependencies": {

  },
  "devDependencies": {
        "electron": "^3.1.13",
        "electron-builder": "^20.38.2",
        "electron-packager": "^13.0.0",
        "electron-toolkit": "^1.0.24",
        "electron-winstaller": "^2.7.0"
  },
  "build": {
    "appId": "com.ipenywis.app",
    "productName": "Facebook Desktop",
    "target": "portable",
    "directories": {
      "output": "build"
    }
  },
   "win": {
            "target": [
                {
                    "target": "nsis",
                    "arch": [
                        "ia32"
                    ]
                }
            ]
        },
        "mac": {
            "target": [
                {
                    "target": "dmg",
                    "arch": [
                        "x64"
                    ]
                }
            ],
            "category": "public.app-category.business"
        },
        "linux": {
            "target": [
                {
                    "target": "debian package (deb)",
                    "arch": [
                        "ia32"
                    ]
                }
            ]
        } 
}
